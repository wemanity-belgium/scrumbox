<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnOrderPreserved="false"
    android:orientation="vertical"
    android:columnCount="1"
    android:rowCount="2">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="0"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/timeSignTextView"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="00"
            android:gravity="right"
            android:id="@+id/countDownMinuteTextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=":"
            android:id="@+id/timeSperator1TextView"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="00"
            android:id="@+id/countDownsecondeRextView"
            android:gravity="center"
            android:layout_gravity="center|fill" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=","
            android:id="@+id/timeSperator2TextView"
            android:layout_gravity="center|fill"
            android:gravity="center" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="00"
            android:id="@+id/countDownMiliSecondeRextView"
            android:layout_gravity="center|fill"
            android:gravity="center_vertical|left" />
    </LinearLayout>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countDownStartButton"
        android:layout_row="1"
        android:layout_column="0"
        android:background="@android:drawable/ic_media_play"
        android:contentDescription="start button"
        android:layout_gravity="center|fill" />
</GridLayout>